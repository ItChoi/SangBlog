<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.blog.sang.sequence.mapper.SequenceMapper">

	<resultMap id="SequenceResult" type="com.blog.sang.sequence.domain.Sequence">
		<id property="sequence_id" column="SEQUENCE_ID" />
		<result property="sequence_name" column="SEQUENCE_NAME"/>
		<result property="count" column="COUNT"/>
	</resultMap>
	
	<select id="getCount" parameterType="String" resultType="Long">
		SELECT 
			COUNT
		FROM
			SEQUENCE_TABLE
		WHERE
			SEQUENCE_NAME = #{sequenceName}
	</select>
	
	<insert id="insert">
		INSERT INTO SEQUENCE_TABLE (SEQUENCE_NAME, COUNT) 
		VALUES (#{sequenceName}, #{count}) 
	</insert>
	
	
	<update id="update" parameterType="com.blog.sang.sequence.domain.Sequence">
		UPDATE 
			SEQUENCE_TABLE
		SET
			COUNT = #{count}
		WHERE
			SEQUENCE_NAME = #{sequenceName}
	
	</update>
	
</mapper>